<?xml version="1.0" encoding="UTF-8" ?>
<Configuration status="info">

    <Appenders>
        <File name="FileAppender" fileName="logs/Pagination.log">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p - %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>

</Configuration>